<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ply"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />



    <TextView
        android:id="@+id/payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Method"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="60dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="@drawable/paymentbackground">


    <TextView
        android:id="@+id/upi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with UPI"
        android:textColor="@color/textview_color_states"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/qr_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with QR Code"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/textview_color_states"
        android:background="@drawable/textview_background"
        android:padding="16dp"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/cod_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash on Delivery"
        android:textColor="@color/textview_color_states"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/upi_number_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="40dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Payment"
        android:textStyle="bold"
        android:textColor="@color/textview_color_states"
        android:background="@color/green"
        android:gravity="center"
        android:textSize="20dp"
        android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
</ScrollView>