<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfilePage">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#072a6c"
    android:id="@+id/profiletop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ly3"
        android:layout_below="@id/changely"
        android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Follow On:-"
        android:fontFamily="@font/merianda"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
        <ImageView
            android:id="@+id/insta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/insta"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/facebook"
            android:backgroundTint="#0B4D81"
            android:layout_marginLeft="11dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/Twitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/x"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/ly5"
        android:layout_marginTop="200dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/logoutButton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/calibri"
        android:background="@drawable/logout_button"
        android:backgroundTint="#820623"
        android:gravity="center"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainly"
    android:layout_below="@+id/profiletop"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_color="@color/black"
        android:layout_marginLeft="30dp"
        app:civ_border_width="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/calibri"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/profilename"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Pushp"
        android:fontFamily="@font/calibri"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="3dp"
        android:textSize="15dp"
        android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri"
            android:text="Email: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileemail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri"
            android:text="Pushp"
            android:textSize="15dp"
            android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changely"
            android:layout_below="@id/mainly"
            android:orientation="vertical">

            <TextView
                android:id="@+id/changeImageButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/profileImageView"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:fontFamily="@font/calibri"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/login_button"
                android:text="Change" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider"
                android:layout_below="@+id/changeImageButton"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly4"
        android:layout_below="@+id/ly3"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity=""
        android:fontFamily="@font/calibri"
        android:text="About Us"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly5"
        android:layout_below="@+id/ly4"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/Contactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Contact Us"
            android:fontFamily="@font/calibri"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>