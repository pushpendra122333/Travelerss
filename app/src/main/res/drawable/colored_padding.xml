<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <!-- Background color for the padding area -->
            <shape android:shape="rectangle">
                <solid android:color="#41B3A2" /> <!-- Red padding area -->
            </shape>
        </item>
        <item android:left="16dp" android:right="16dp" android:top="16dp" android:bottom="16dp">
            <!-- Your actual content's background -->
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- White content background -->
            </shape>
        </item>
    </layer-list>
